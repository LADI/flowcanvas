@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix foaf:  <http://xmlns.com/foaf/0.1/> .
@prefix lolep: <http://drobilla.net/software/plugins/lolep.lv2/> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix obj:   <http://lv2plug.in/ns/dev/object#> .
@prefix pg:    <http://lv2plug.in/ns/dev/port-groups#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ctx:   <http://lv2plug.in/ns/dev/contexts#> .

lolep:reverse a lv2:Plugin ;
	a lv2:UtilityPlugin ;
	doap:name "Reverse" ;
	doap:maintainer [
		foaf:name "Dave Robillard" ;
		foaf:homepage <http://drobilla.net/> ;
		foaf:mbox <mailto:dave@drobilla.net> ;
	] ;
    lv2:requiredFeature ctx:MessageContext ;
	ctx:requiredContext ctx:MessageContext ;
	doap:license <http://usefulinc.com/doap/licenses/gpl> ;
	lv2:pluginProperty lv2:hardRtCapable ;
	lv2:port [
		a lv2:InputPort, obj:ValuePort ;
		ctx:context ctx:MessageContext ;
		lv2:name "Input" ;
		lv2:index 0 ;
		lv2:symbol "input" ;
		lv2:default "" ;
		rdfs:comment """Expects a string, e.g. "hello" or "2" or "5.7".""" ;
	] , [
		a lv2:OutputPort, obj:ValuePort ;
		ctx:context ctx:MessageContext ;
		obj:asLargeAs "input" ;
		lv2:name "Output" ;
		lv2:index 1 ;
		lv2:symbol "output" ;
		rdfs:comment """Input string, reversed""" ;
	] .

