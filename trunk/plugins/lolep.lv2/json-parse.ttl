@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix ctx:   <http://lv2plug.in/ns/ext/contexts#> .
@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix foaf:  <http://xmlns.com/foaf/0.1/> .
@prefix lolep: <http://drobilla.net/software/plugins/lolep.lv2/> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix pg:    <http://lv2plug.in/ns/ext/port-groups#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .

lolep:json-parse a lv2:Plugin ;
	a lolep:TextPlugin ;
	doap:name "JSON Parse" ;
	doap:maintainer [
		foaf:name "David Robillard" ;
		foaf:homepage <http://drobilla.net/> ;
		foaf:mbox <mailto:d@drobilla.net> ;
	] ;
    lv2:requiredFeature ctx:MessageContext ;
    lv2:requiredFeature <http://lv2plug.in/ns/ext/uri-map> ;
	doap:license <http://usefulinc.com/doap/licenses/gpl> ;
	lv2:pluginProperty lv2:hardRtCapable ;
	lv2:port [
		a lv2:InputPort, atom:ValuePort ;
		ctx:context ctx:MessageContext ;
		atom:supports atom:String ;
		lv2:name "Input" ;
		lv2:index 0 ;
		lv2:symbol "input" ;
		lv2:default "" ;
		rdfs:comment """
Expects a JSON formatted string which will be parsed into an Atom.

Understood syntax examples:
<dl>
<dt>2</dt><dd>atom:Int32</dd>
<dt>3.5</dt><dd>atom:Float32</dd>
<dt>true</dt><dd>atom:Bool</dd>
<dt>false</dt><dd>atom:Bool</dd>
<dt>"hello"</dt><dd>atom:String</dd>
<dt>[1 2.0 "three"]</dt><dd>atom:Tuple</dd>
<dt>{ "http://example.org/greeting" : "Hello",<br/>
  "http://example.org/name" : "World"<br/>}</dt><dd>atom:Dict</dd>
</dl>
"""
	] , [
		a lv2:OutputPort, atom:ValuePort ;
		ctx:context ctx:MessageContext ;
		lv2:name "Output" ;
		lv2:index 1 ;
		lv2:symbol "output" ;
		rdfs:comment """Input in parsed form""" ;
	] .

